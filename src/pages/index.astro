		<div id="cart-count">0</div>
	</div>

	<div id="cart-modal">
		<div class="modal-content">
			<button onclick="toggleModal(false)" style="position:absolute; right:25px; top:25px; border:none; background:none; font-size:1.5rem; cursor:pointer;">‚úï</button>
			<h2 style="font-family:'Playfair Display'; margin:0 0 1.5rem 0;">Va≈°e rezervace</h2>
			<div id="cart-items" style="margin-bottom: 2rem; border-bottom: 1px solid #eee; padding-bottom: 1rem;"></div>
			
			<form id="order-form">
				<div style="margin-bottom:1.2rem">
					<label style="font-size:0.85rem; font-weight:bold; display:block;">M√≠sto vyzvednut√≠</label>
					<select id="store-select" class="input-field" required onchange="validateDate()">
						<option value="">Vyberte prodejnu...</option>
						{stores.map(s => <option value={s.id} data-closed={s.closed.join(',')}>{s.name}</option>)}
					</select>
