---
import Layout from '../layouts/Layout.astro';

// Načtení dat z kořenového adresáře podle vašeho screenshotu
import productsData from '../../data.json';
import b2bData from '../../b2b.json';

// Oprava načítání produktů - bereme přímo pole ze souboru
const cakes = productsData.dorty || [];
const desserts = productsData.zakusky || [];
// Načtení prodejen přímo ze souboru data.json, aby adresy byly správně
const stores = productsData.prodejny || [];
const b2b = b2bData;
---

<Layout title="Cukrářství Blahutovi">
	<style is:global>
		:root {
			--navy: #0a192f;
			--gold: #d4af37;
			--offwhite: #f8f9fa;
		}
		body { background-color: var(--offwhite); font-family: 'Inter', sans-serif; margin: 0; color: var(--navy); }
		header { background-color: var(--navy); padding: 1rem 0; color: white; position: sticky; top: 0; z-index: 100; }
		.nav-container { max-width: 1200px; margin: 0 auto; display: flex; justify-content: space-between; align-items: center; padding: 0 1rem; }
		.nav-links a { color: white; text-decoration: none; margin-left: 1.5rem; font-weight: bold; }
		.hero { background: linear-gradient(rgba(10,25,47,0.85), rgba(10,25,47,0.85)); color: white; padding: 80px 1rem; text-align: center; }
		.hero h2 { font-size: 3rem; color: var(--gold); margin-bottom: 1rem; }
		.section-title { text-align: center; font-size: 2.5rem; color: var(--navy); margin: 3rem 0; }
		.grid { max-width: 1200px; margin: 0 auto; display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 2rem; padding: 0 1rem; }
		.card { background: white; border-radius: 15px; overflow: hidden; box-shadow: 0 4px 15px rgba(0,0,0,0.1); border: 1px solid rgba(212,175,55,0.2); transition: transform 0.3s; }
		.card:hover { transform: translateY(-5px); }
		.card img { width: 100%; height: 280px; object-fit: cover; }
		.card-content { padding: 1.5rem; text-align: center; }
		.price { color: var(--gold); font-weight: bold; font-size: 1.2rem; margin: 0.5rem 0; }
		.btn-gold { display: inline-block; background-color: var(--gold); color: var(--navy); padding: 0.8rem 2rem; border-radius: 25px; text-decoration: none; font-weight: bold; margin-top: 1rem; border: none; cursor: pointer; }
		footer { background: var(--navy); color: white; text-align: center; padding: 3rem 1rem; margin-top: 4rem; }
	</style>

	<header>
		<div class="nav-container">
			<h1 style="margin:0; color:var(--gold); font-family: 'Playfair Display', serif;">Cukrářství Blahutovi</h1>
			<div class="nav-links">
				<a href="#dorty">Dorty</a>
				<a href="#zakusky">Zákusky</a>
				<a href="#prodejny">Prodejny</a>
				<a href="#rezervace">Rezervace</a>
			</div>
		</div>
	</header>

	<section class="hero">
		<h2>Rodinná tradice od roku 1985</h2>
		<p style="font-size: 1.2rem; max-width: 800px; margin: 0 auto; opacity: 0.9;">Pečeme pro Vás ty nejlepší dorty a zákusky z poctivých surovin.</p>
	</section>

	{cakes.length > 0 && (
		<section id="dorty">
			<h2 class="section-title">Naše dorty</h2>
			<div class="grid">
				{cakes.map((p) => (
					<div class="card">
						<img src={p.image} alt={p.title} loading="lazy" />
						<div class="card-content">
							<h3 style="margin:0;">{p.title}</h3>
							<p style="font-size: 0.9rem; color: #666; height: 3em; overflow: hidden;">{p.description}</p>
							<p class="price">{p.price}</p>
							<a href="#rezervace" class="btn-gold">Objednat</a>
						</div>
					</div>
				))}
			</div>
		</section>
	)}

	{desserts.length > 0 && (
		<section id="zakusky">
			<h2 class="section-title">Naše zákusky</h2>
			<div class="grid">
				{desserts.map((p) => (
					<div class="card">
						<img src={p.image} alt={p.title} loading="lazy" />
						<div class="card-content">
							<h3 style="margin:0;">{p.title}</h3>
							<p style="font-size: 0.9rem; color: #666; height: 3em; overflow: hidden;">{p.description}</p>
							<p class="price">{p.price}</p>
							<a href="#rezervace" class="btn-gold">Objednat</a>
						</div>
					</div>
				))}
			</div>
		</section>
	)}

	<section id="prodejny" style="background: #f0f0f0; padding-bottom: 5rem; margin-top: 4rem;">
		<h2 class="section-title" style="padding-top: 3rem;">Naše prodejny</h2>
		<div class="grid">
			{stores.map((s) => (
				<div class="card" style="padding: 2rem; text-align: left;">
					<h3 style="color:var(--gold); margin-top: 0;">{s.name}</h3>
					<p style="font-weight: bold; margin-bottom: 0.5rem;">{s.address}</p>
					<p style="font-size: 0.9rem; color: #555;"><strong>Otevírací doba:</strong><br/>{s.hours || 'Dle domluvy'}</p>
					<a href={s.mapsUrl || "#"} target="_blank" class="btn-gold" style="background:var(--navy); color:white; width: 100%; text-align: center; box-sizing: border-box; margin-top: 1.5rem;">Navigovat do prodejny</a>
				</div>
			))}
		</div>
	</section>

