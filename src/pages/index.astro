---
import Layout from '../layouts/Layout.astro';
import productsData from '../../data.json';

// Načtení a seřazení produktů
const cakes = (productsData?.cakes || []).sort((a, b) => (a.weight ?? 999) - (b.weight ?? 999));
const desserts = (productsData?.desserts || []).sort((a, b) => (a.weight ?? 999) - (b.weight ?? 999));

// Definice prodejen s otevírací dobou a blokací termínů
const stores = [
	{ id: 'petrvald', name: 'Petřvald', address: 'Šenovská 1, 735 41 Petřvald', closed: [1], hours: 'Út-Ne: 9:00 - 17:00 (Po: zavřeno)' },
	{ id: 'pist', name: 'Píšť', address: 'Hlavní 123, 739 51 Píšť', closed: [0, 6], hours: 'Po-Pá: 7:00 - 18:00' },
	{ id: 'karvina', name: 'Karviná', address: 'Náměstí 456, 733 01 Karviná', closed: [0], hours: 'Po-Pá: 9:00 - 18:00, So: 8:00 - 12:00' },
	{ id: 'ostrava', name: 'Ostrava', address: 'Hlavní třída 789, 702 00 Ostrava', closed: [0], hours: 'Po-So: 9:00 - 19:00' }
];
---

<Layout title="Cukrářství Blahutovi">
	<style is:global>
		:root { --navy: #0a192f; --gold: #d4af37; --offwhite: #fcfaf7; }
		body { background-color: var(--offwhite); font-family: 'Plus Jakarta Sans', sans-serif; margin: 0; scroll-behavior: smooth; }
		
		/* Záhlaví */
		header { background: var(--navy); padding: 1.2rem 0; color: white; position: sticky; top: 0; z-index: 100; border-bottom: 2px solid var(--gold); }
		.nav-container { max-width: 1200px; margin: 0 auto; display: flex; justify-content: space-between; align-items: center; padding: 0 1rem; }
		.nav-links a { color: white; text-decoration: none; margin-left: 1.5rem; font-weight: bold; }
		.nav-links a:hover { color: var(--gold); }

		/* Košík ikona */
		#cart-float {
			position: fixed; bottom: 30px; right: 30px; background: var(--gold); color: var(--navy);
			width: 70px; height: 70px; border-radius: 50%; display: flex; align-items: center; justify-content: center;
			box-shadow: 0 10px 25px rgba(0,0,0,0.2); cursor: pointer; z-index: 1000; transition: 0.3s;
		}
		#cart-count {
			position: absolute; top: 0; right: 0; background: var(--navy); color: white;
			width: 25px; height: 25px; border-radius: 50%; font-size: 0.8rem; display: flex; align-items: center; justify-content: center;
		}

		/* Produkty */
		.section-title { text-align: center; font-family: 'Playfair Display', serif; font-size: 3rem; margin: 4rem 0 2rem; color: var(--navy); }
		.grid { max-width: 1200px; margin: 0 auto; display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 2.5rem; padding: 0 1rem; }
		.card { background: white; border-radius: 12px; overflow: hidden; box-shadow: 0 10px 20px rgba(0,0,0,0.05); border: 1px solid rgba(212,175,55,0.15); text-align: center; transition: 0.3s; }
		.card:hover { transform: translateY(-8px); }
		.card img { width: 100%; height: 280px; object-fit: cover; }
		.price { color: var(--gold); font-weight: bold; font-size: 1.4rem; margin: 0.5rem 0; }
		.btn-add { background: var(--gold); color: var(--navy); padding: 0.8rem 1.5rem; border-radius: 50px; text-decoration: none; font-weight: bold; margin: 1rem 0; border: none; cursor: pointer; width: 85%; }

		/* B2B sekce */
		.b2b-section { background: var(--navy); color: white; padding: 5rem 1rem; text-align: center; margin-top: 5rem; }
		
		/* Modál košíku */
		#cart-modal { display: none; position: fixed; inset: 0; background: rgba(0,0,0,0.8); z-index: 2000; align-items: center; justify-content: center; padding: 15px; }
		.modal-content { background: white; width: 100%; max-width: 550px; border-radius: 20px; padding: 2.5rem; max-height: 95vh; overflow-y: auto; position: relative; color: var(--navy); }
		.input-field { padding: 0.8rem; border-radius: 8px; border: 1px solid #ddd; width: 100%; margin-top: 5px; box-sizing: border-box; }
	</style>

	<header>
		<div class="nav-container">
			<h1 style="margin:0; color:var(--gold); font-family: 'Playfair Display'">Cukrářství Blahutovi</h1>
			<nav class="nav-links">
				<a href="#dorty">Dorty</a>
				<a href="#zakusky">Zákusky</a>
				<a href="#prodejny">Prodejny</a>
				<a href="#b2b">B2B</a>
			</nav>
		</div>
	</header>

	<div id="cart-float" onclick="toggleModal(true)">
		<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="9" cy="21" r="1"></circle><circle cx="20" cy="21" r="1"></circle><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path></svg>
		<div id="cart-count">0</div>
	</div>

	<div id="cart-modal">
		<div class="modal-content">
			<button onclick="toggleModal(false)" style="position:absolute; right:20px; top:20px; border:none; background:none; font-size:1.5rem; cursor:pointer">✕</button>
			<h2 style="font-family:'Playfair Display'; margin-top:0">Vaše rezervace</h2>
			<div id="cart-items" style="margin: 1.5rem 0; border-bottom: 1px solid #eee; padding-bottom: 1rem;"></div>
			
			<form id="order-form">
				<div style="margin-bottom:1rem">
					<label><b>Místo vyzvednutí</b></label>
					<select id="store-select" class="input-field" required onchange="validateDate()">
						<option value="">Vyberte prodejnu...</option>
						{stores.map(s => <option value={s.id} data-closed={s.closed.join(',')}>{s.name} - {s.address}</option>)}
					</select>
				</div>
				<div style="margin-bottom:1rem">
					<label><b>Datum vyzvednutí (min. za 3 dny)</b></label>
					<input type="date" id="date-input" class="input-field" required onchange="validateDate()" />
					<p id="date-error" style="color:red; font-size:0.8rem; display:none; margin-top:5px;">V tento den máme zavřeno nebo je termín příliš brzy.</p>
				</div>
				<input type="text" id="cust-name" placeholder="Jméno a příjmení" class="input-field" required />
				<input type="tel" id="cust-phone" placeholder="Telefon" class="input-field" required />
				<button type="submit" id="submit-btn" class="btn-add" style="width:100%; margin-top:1.5rem">Odeslat objednávku</button>
			</form>
		</div>
	</div>

	<section id="dorty">
		<h2 class="section-title">Naše dorty</h2>
		<div class="grid">
			{cakes.map((p) => (
				<div class="card">
					<img src={p.foto} alt={p.title} loading="lazy" />
					<div class="card-content">
						<h3 style="margin:0; font-family:'Playfair Display'">{p.title}</h3>
						<p style="font-size:0.85rem; color:#666; margin:5px 0;">{p.porce}</p>
						<p class="price">{p.cena}</p>
						<button class="btn-add" onclick={`addToCart('${p.title}', '${p.cena}')`}>Přidat do košíku</button>
					</div>
				</div>
			))}
		</div>
	</section>

	<section id="zakusky" style="background: white; padding: 1rem 0 5rem 0;">
		<h2 class="section-title">Naše zákusky</h2>
		<div class="grid">
			{desserts.map((p) => (
				<div class="card">
					<img src={p.foto} alt={p.title} loading="lazy" />
					<div class="card-content">
						<h3 style="margin:0; font-family:'Playfair Display'">{p.title}</h3>
						<p class="price">{p.cena}</p>
						<button class="btn-add" onclick={`addToCart('${p.title}', '${p.cena}')`}>Přidat do košíku</button>
					</div>
				</div>
			))}
		</div>
	</section>

	<section id="b2b" class="b2b-section">
		<div style="max-width:800px; margin:0 auto;">
			<h2 style="color:var(--gold); font-family:'Playfair Display'; font-size:2.5rem;">B2B Spolupráce</h2>
			<p style="font-size:1.1rem; opacity:0.9; line-height:1.7;">Dodáváme naše poctivé výrobky do kaváren, restaurací a na firemní akce. Nabízíme velkoobchodní podmínky a pravidelné závozy.</p>
			<a href="mailto:info@cukrarstvi-blahutovi.cz" class="btn-gold" style="display:inline-block; background:var(--gold); color:var(--navy); padding:0.8rem 2rem; border-radius:50px; text-decoration:none; font-weight:bold; margin-top:1rem;">Kontaktujte nás</a>
		</div>
	</section>

	<section id="prodejny" style="padding: 5rem 1rem;">
		<h2 class="section-title">Kde nás najdete</h2>
		<div class="grid">
			{stores.map((s) => (
				<div class="card" style="padding:2rem; background:var(--navy); color:white; text-align:left;">
					<h3 style="color:var(--gold); margin-top:0; font-family:'Playfair Display'; font-size:1.8rem;">{s.name}</h3>
					<p style="font-weight:bold; margin-bottom:5px;">{s.address}</p>
					<p style="opacity:0.8; font-size:0.9rem;">{s.hours}</p>
					<a href="#" style="color:var(--gold); text-decoration:none; font-weight:bold; font-size:0.9rem;">Zobrazit na mapě →</a>
				</div>
			))}
		</div>
	</section>

	<footer>
		<div style="background:var(--navy); color:white; text-align:center; padding:3rem 1rem;">
			<p>© 2026 Cukrářství Blahutovi | Poctivá cukrářská výroba</p>
		</div>
	</footer>

	<script is:inline>
		let cart = [];
		const dateInput = document.getElementById('date-input');
		const minDate = new Date();
		minDate.setDate(minDate.getDate() + 3);
		dateInput.min = minDate.toISOString().split('T')[0];

		function addToCart(title, price) {
			const existing = cart.find(i => i.title === title);
			if (existing) { existing.qty++; } else { cart.push({ title, price, qty: 1 }); }
			updateCart();
			document.getElementById('cart-float').style.transform = 'scale(1.2)';
			setTimeout(() => document.getElementById('cart-float').style.transform = 'scale(1)', 200);
		}

		function updateCart() {
			const countEl = document.getElementById('cart-count');
			const itemsEl = document.getElementById('cart-items');
			countEl.innerText = cart.reduce((sum, item) => sum + item.qty, 0);
			if (cart.length === 0) { itemsEl.innerHTML = '<p style="text-align:center; opacity:0.5">Košík je prázdný.</p>'; return; }
			itemsEl.innerHTML = cart.map((item, index) => `
				<div style="display:flex; justify-content:space-between; margin-bottom:10px; font-size:0.9rem">
					<span><b>${item.qty}x</b> ${item.title}</span>
					<span>${item.price} <button onclick="removeItem(${index})" style="color:red; border:none; background:none; cursor:pointer">✕</button></span>
				</div>
			`).join('');
		}

		function removeItem(index) { cart.splice(index, 1); updateCart(); }
		function toggleModal(show) { document.getElementById('cart-modal').style.display = show ? 'flex' : 'none'; }

		function validateDate() {
			const storeSelect = document.getElementById('store-select');
			const errorEl = document.getElementById('date-error');
			const submitBtn = document.getElementById('submit-btn');
			if (!dateInput.value || !storeSelect.value) return;
			const day = new Date(dateInput.value).getDay();
			const closed = storeSelect.options[storeSelect.selectedIndex].dataset.closed.split(',').map(Number);
			const isInvalid = closed.includes(day);
			errorEl.style.display = isInvalid ? 'block' : 'none';
			submitBtn.disabled = isInvalid;
			submitBtn.style.opacity = isInvalid ? '0.5' : '1';
		}

		document.getElementById('order-form').onsubmit = (e) => {
			e.preventDefault();
			if (cart.length === 0) return alert('Košík je prázdný!');
			const store = document.getElementById('store-select').options[document.getElementById('store-select').selectedIndex].text;
			alert(`Děkujeme! Objednávka pro vyzvednutí v prodejně ${store} dne ${dateInput.value} byla odeslána k potvrzení.`);
			cart = []; updateCart(); toggleModal(false);
		};
	</script>
</Layout>
