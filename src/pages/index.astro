	{ id: 'ostrava', name: 'Ostrava (Z√°b≈ôeh)', address: 'V√Ω≈°kovick√° 116a', phone: '+420 775 271 101', mapUrl: 'https://maps.google.com/?q=V√Ω≈°kovick√°+116a+Ostrava', closed: [0], hours: 'Po-P√°: 9:00 - 17:00' }
