---
interface Props {
	title?: string;
}

const { title = 'Cukrářství Blahutovi' } = Astro.props;
---

<!doctype html>
<html lang="cs">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Rodinné cukrářství s tradicí" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glightbox/dist/css/glightbox.min.css" />
		<script src="https://cdn.jsdelivr.net/npm/glightbox/dist/js/glightbox.min.js" is:inline></script>
	</head>
	<body class="bg-offwhite text-navy-900">
		<slot />

		<script is:inline>
			// Inicializace GLightbox po načtení stránky
			document.addEventListener('DOMContentLoaded', () => {
				const lightbox = GLightbox({
					touchNavigation: true,
					loop: true,
					width: "90vw",
					height: "90vh"
				});
			});
		</script>
	</body>
</html>

<style is:global>
	/* Základní nastavení barev a písma pro celý web */
	:root {
		--navy-900: #1a2a3a;
		--gold-500: #d4af37;
		--offwhite: #fcfaf7;
	}
	
	html {
		font-family: system-ui, sans-serif;
		background: var(--offwhite);
		scroll-behavior: smooth;
	}

	body {
		margin: 0;
		padding: 0;
	}
</style>
