---
import Layout from '../layouts/Layout.astro';

// Načtení tvých dat
import productsData from '../../data.json';

// Přesné mapování na tvůj JSON (cena, foto, title)
const cakes = productsData?.cakes || [];
const desserts = productsData?.desserts || [];

// Seznam tvých prodejen s přesnými adresami
const stores = [
	{
		name: 'Petřvald',
		address: 'Šenovská 1, 735 41 Petřvald',
		hours: 'Út-Ne: 9:00 - 17:00 (Po: zavřeno)',
		maps: 'https://www.google.com/maps/search/?api=1&query=Šenovská+1+Petřvald'
	},
	{
		name: 'Píšť',
		address: 'Hlavní 123, 739 51 Píšť',
		hours: 'Po-Pá: 7:00 - 18:00',
		maps: 'https://www.google.com/maps/search/?api=1&query=Hlavní+123+Píšť'
	},
	{
		name: 'Karviná',
		address: 'Náměstí 456, 733 01 Karviná',
		hours: 'Po-Pá: 9:00 - 18:00, So: 8:00 - 12:00',
		maps: 'https://www.google.com/maps/search/?api=1&query=Karviná+Náměstí'
	},
	{
		name: 'Ostrava',
		address: 'Hlavní třída 789, 702 00 Ostrava',
		hours: 'Po-So: 9:00 - 19:00',
		maps: 'https://www.google.com/maps/search/?api=1&query=Ostrava+Hlavní+třída'
	}
];
---

<Layout title="Cukrářství Blahutovi">
	<style is:global>
		:root {
			--navy: #0a192f;
			--gold: #d4af37;
			--offwhite: #fcfaf7;
		}
		body { background-color: var(--offwhite); font-family: 'Inter', sans-serif; margin: 0; color: var(--navy); }
		header { background-color: var(--navy); padding: 1.5rem 0; color: white; position: sticky; top: 0; z-index: 100; border-bottom: 2px solid var(--gold); }
		.nav-container { max-width: 1200px; margin: 0 auto; display: flex; justify-content: space-between; align-items: center; padding: 0 1rem; }
		.nav-links a { color: white; text-decoration: none; margin-left: 1.5rem; font-weight: bold; }
		.hero { background: #112240; padding: 80px 1rem; text-align: center; color: white; }
		.hero h2 { font-size: 3.5rem; color: var(--gold); margin-bottom: 1rem; font-family: 'Playfair Display', serif; }
		.section-title { text-align: center; font-size: 3rem; color: var(--navy); margin: 4rem 0 2rem; font-family: 'Playfair Display', serif; }
		.grid { max-width: 1200px; margin: 0 auto; display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 2.5rem; padding: 0 1rem; }
		.card { background: white; border-radius: 12px; overflow: hidden; box-shadow: 0 10px 20px rgba(0,0,0,0.05); border: 1px solid rgba(212,175,55,0.15); transition: 0.3s; }
		.card:hover { transform: translateY(-8px); }
		.card img { width: 100%; height: 280px; object-fit: cover; background-color: #eee; }
		.card-content { padding: 1.5rem; text-align: center; }
		.price { color: var(--gold); font-weight: bold; font-size: 1.4rem; margin: 0.5rem 0; }
		.btn-gold { display: inline-block; background: var(--gold); color: var(--navy); padding: 0.8rem 2rem; border-radius: 50px; text-decoration: none; font-weight: bold; margin-top: 1rem; }
		.store-card { background: var(--navy); color: white; padding: 2.5rem; border-radius: 15px; text-align: left; }
		footer { background: var(--navy); color: white; text-align: center; padding: 4rem 1rem; margin-top: 5rem; }
	</style>

	<header>
		<div class="nav-container">
			<h1 style="margin:0; color:var(--gold); font-family: 'Playfair Display', serif;">Cukrářství Blahutovi</h1>
			<div class="nav-links">
				<a href="#dorty">Dorty</a>
				<a href="#zakusky">Zákusky</a>
				<a href="#prodejny">Prodejny</a>
			</div>
		</div>
	</header>

	<section class="hero">
		<h2>Poctivé řemeslo od roku 1985</h2>
		<p style="font-size: 1.3rem; opacity: 0.9;">Aktuálně pro Vás máme v nabídce přes 120 druhů poctivých výrobků.</p>
	</section>

	<section id="dorty">
		<h2 class="section-title">Naše dorty ({cakes.length})</h2>
		<div class="grid">
			{cakes.map((p) => (
				<div class="card">
					<img src={p.foto} alt={p.title} loading="lazy" />
					<div class="card-content">
						<h3 style="margin:0; font-family: 'Playfair Display', serif;">{p.title}</h3>
						<p style="font-size: 0.9rem; color: #666; margin-top: 5px;">{p.porce}</p>
						<p class="price">{p.cena}</p>
						<a href="#rezervace" class="btn-gold">Objednat</a>
					</div>
				</div>
			))}
		</div>
	</section>

	<section id="zakusky" style="background-color: white; padding-bottom: 5rem;">
		<h2 class="section-title">Naše zákusky ({desserts.length})</h2>
		<div class="grid">
			{desserts.map((p) => (
				<div class="card">
					<img src={p.foto} alt={p.title} loading="lazy" />
					<div class="card-content">
						<h3 style="margin:0; font-family: 'Playfair Display', serif;">{p.title}</h3>
						<p class="price">{p.cena}</p>
						<a href="#rezervace" class="btn-gold">Objednat</a>
					</div>
				</div>
			))}
		</div>
	</section>

	<section id="prodejny">
		<h2 class="section-title">Naše prodejny</h2>
		<div class="grid">
			{stores.map((s) => (
				<div class="store-card">
					<h3 style="color:var(--gold); margin-top:0;">{s.name}</h3>
					<p style="font-size: 1.1rem; margin-bottom: 0.5rem;">{s.address}</p>
					<p style="opacity: 0.7; margin-bottom: 1.5rem;">{s.hours}</p>
					<a href={s.maps} target="_blank" class="btn-gold" style="display:block; text-align:center;">Navigovat</a>
				</div>
			))}
		</div>
	</section>

	<section id="rezervace">
		<div style="max-width: 600px; margin: 5rem auto; background: white; padding: 3rem; border-radius: 20px; box-shadow: 0 20px 40px rgba(0,0,0,0.1); text-align: center;">
			<h2 style="margin-top:0; font-family: 'Playfair Display', serif; font-size: 2.5rem;">Rezervace</h2>
			<form style="display: flex; flex-direction: column; gap: 1rem; margin-top: 2rem;">
				<input type="text" placeholder="Vaše jméno" style="padding: 1rem; border-radius: 10px; border: 1px solid #ddd;" required />
				<input type="tel" placeholder="Telefon" style="padding: 1rem; border-radius: 10px; border: 1px solid #ddd;" required />
				<button type="button" class="btn-gold" style="font-size: 1.2rem; border: none; cursor: pointer;">Odeslat poptávku</button>
			</form>
		</div>
	</section>

	<footer>
		<p>© 2026 Cukrářství Blahutovi | Tradiční receptury</p>
	</footer>
</Layout>
